@model IEnumerable<Bookstore.Web.Models.DTOs.CartItemDto>
@{
    ViewData["Title"] = "Shopping Cart";
}

<h2>Shopping Cart</h2>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Image</th>
                    <th>Book</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="@item.ImagePath" alt="@item.BookTitle" class="img-thumbnail" style="width: 80px;" /></td>
                        <td>@item.BookTitle</td>
                        <td>RM @item.Price.ToString("N2")</td>
                        <td>@item.Quantity</td>
                        <td><strong>RM @item.TotalPrice.ToString("N2")</strong></td>
                        <td>
                            <form asp-controller="Cart" asp-action="Remove" method="post" class="d-inline">
                                <input type="hidden" name="cartId" value="@item.CartId" />
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Remove this item?');">
                                    <i class="fas fa-trash"></i> Remove
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr class="table-secondary">
                    <td colspan="4" class="text-end"><strong>Total:</strong></td>
                    <td colspan="2"><strong>RM @ViewBag.CartTotal.ToString("N2")</strong></td>
                </tr>
            </tfoot>
        </table>
    </div>

    <div class="d-flex justify-content-between mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Continue Shopping
        </a>
        <div>
            <form asp-controller="Cart" asp-action="EmptyCart" method="post" class="d-inline me-2">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-warning" onclick="return confirm('Empty entire cart?');">
                    <i class="fas fa-trash-alt"></i> Empty Cart
                </button>
            </form>
            <a asp-controller="Order" asp-action="Checkout" class="btn btn-success">
                <i class="fas fa-credit-card"></i> Proceed to Checkout
            </a>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>Your cart is empty</h4>
        <p>Browse our book catalog and add items to your cart.</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
            <i class="fas fa-book"></i> Browse Books
        </a>
    </div>
}
