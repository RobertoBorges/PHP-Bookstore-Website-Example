@model IEnumerable<Bookstore.Web.Models.DTOs.OrderDto>
@{
    ViewData["Title"] = "Order History";
}

<h2>Order History</h2>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Order ID</th>
                    <th>Date</th>
                    <th>Book</th>
                    <th>Quantity</th>
                    <th>Total Price</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.PurchaseDate.ToString("MMM dd, yyyy")</td>
                        <td>@order.BookTitle</td>
                        <td>@order.Quantity</td>
                        <td>RM @order.TotalPrice.ToString("N2")</td>
                        <td>
                            @if (order.Status == "y")
                            {
                                <span class="badge bg-success">Completed</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                        </td>
                        <td>
                            <a asp-controller="Order" asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-info">
                                <i class="fas fa-eye"></i> View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>No orders yet</h4>
        <p>You haven''t placed any orders yet. Start shopping to see your order history here.</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
            <i class="fas fa-shopping-bag"></i> Start Shopping
        </a>
    </div>
}

<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Home
    </a>
</div>
