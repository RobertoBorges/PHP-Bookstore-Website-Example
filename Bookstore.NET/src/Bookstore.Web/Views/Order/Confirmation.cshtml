@model Bookstore.Web.Models.DTOs.OrderDetailsDto
@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="alert alert-success">
    <h4><i class="fas fa-check-circle"></i> Order Successful!</h4>
    <p>Thank you for your purchase. Your order has been placed successfully.</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5>Order Summary</h5>
            </div>
            <div class="card-body">
                <table class="table">
                    <tr>
                        <td><strong>Order ID:</strong></td>
                        <td>@Model.OrderId</td>
                    </tr>
                    <tr>
                        <td><strong>Name:</strong></td>
                        <td>@Model.CustomerName</td>
                    </tr>
                    <tr>
                        <td><strong>Email:</strong></td>
                        <td>@Model.CustomerEmail</td>
                    </tr>
                    <tr>
                        <td><strong>Address:</strong></td>
                        <td>@Model.CustomerAddress</td>
                    </tr>
                    <tr>
                        <td><strong>Date:</strong></td>
                        <td>@Model.PurchaseDate.ToString("MMM dd, yyyy HH:mm")</td>
                    </tr>
                </table>

                <h5 class="mt-4">Order Items</h5>
                <div class="border p-3">
                    <div class="row">
                        <div class="col-md-3">
                            @if (!string.IsNullOrEmpty(Model.BookImage))
                            {
                                <img src="@Model.BookImage" alt="@Model.BookTitle" class="img-fluid" />
                            }
                        </div>
                        <div class="col-md-9">
                            <h6>@Model.BookTitle</h6>
                            <p>Quantity: @Model.Quantity</p>
                            <p><strong>Total: RM @Model.TotalPrice.ToString("N2")</strong></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-shopping-bag"></i> Continue Shopping
            </a>
            <a asp-controller="Order" asp-action="History" class="btn btn-secondary">
                <i class="fas fa-history"></i> View Order History
            </a>
        </div>
    </div>
</div>
