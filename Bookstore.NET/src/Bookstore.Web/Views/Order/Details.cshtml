@model Bookstore.Web.Models.DTOs.OrderDetailsDto
@{
    ViewData["Title"] = "Order Details";
}

<h2>Order Details</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Order #@Model.OrderId</h5>
                @if (Model.Status == "y")
                {
                    <span class="badge bg-success">Completed</span>
                }
                else
                {
                    <span class="badge bg-warning text-dark">Pending</span>
                }
            </div>
            <div class="card-body">
                <h6>Customer Information</h6>
                <table class="table table-sm">
                    <tr>
                        <td><strong>Name:</strong></td>
                        <td>@Model.CustomerName</td>
                    </tr>
                    <tr>
                        <td><strong>Email:</strong></td>
                        <td>@Model.CustomerEmail</td>
                    </tr>
                    <tr>
                        <td><strong>Address:</strong></td>
                        <td>@Model.CustomerAddress</td>
                    </tr>
                    <tr>
                        <td><strong>Order Date:</strong></td>
                        <td>@Model.PurchaseDate.ToString("MMMM dd, yyyy HH:mm")</td>
                    </tr>
                </table>

                <hr />

                <h6>Order Items</h6>
                <div class="row border p-3">
                    <div class="col-md-3">
                        @if (!string.IsNullOrEmpty(Model.BookImage))
                        {
                            <img src="@Model.BookImage" alt="@Model.BookTitle" class="img-fluid rounded" />
                        }
                    </div>
                    <div class="col-md-9">
                        <h5>@Model.BookTitle</h5>
                        <p class="mb-1">Quantity: <strong>@Model.Quantity</strong></p>
                        <p class="mb-0">Total Price: <strong class="text-success">RM @Model.TotalPrice.ToString("N2")</strong></p>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <a asp-controller="Order" asp-action="History" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to History
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-home"></i> Home
            </a>
        </div>
    </div>
</div>
