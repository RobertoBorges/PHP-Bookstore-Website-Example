@model IEnumerable<Order>
@{
    ViewData["Title"] = "Order History";
}

<h1><i class="bi bi-clock-history"></i> Order History</h1>

@if (!Model.Any())
{
    <div class="alert alert-info text-center py-5">
        <i class="bi bi-bag-x fs-1"></i>
        <h4 class="mt-3">No orders yet</h4>
        <p>You haven''t placed any orders yet.</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-2">
            <i class="bi bi-book"></i> Start Shopping
        </a>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-primary">
                <tr>
                    <th>Order #</th>
                    <th>Book</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total</th>
                    <th>Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.OrderByDescending(o => o.PurchaseDate))
                {
                    <tr>
                        <td><strong>#@order.OrderId</strong></td>
                        <td>@order.Book?.BookTitle</td>
                        <td>@order.Quantity</td>
                        <td>$@order.UnitPrice.ToString("F2")</td>
                        <td><strong>$@order.TotalPrice.ToString("F2")</strong></td>
                        <td>@order.PurchaseDate.ToString("MMM dd, yyyy")</td>
                        <td>
                            @switch (order.Status)
                            {
                                case BookstoreApp.Data.Enums.OrderStatus.Pending:
                                    <span class="badge bg-warning text-dark">Pending</span>
                                    break;
                                case BookstoreApp.Data.Enums.OrderStatus.Completed:
                                    <span class="badge bg-success">Completed</span>
                                    break;
                                case BookstoreApp.Data.Enums.OrderStatus.Cancelled:
                                    <span class="badge bg-danger">Cancelled</span>
                                    break;
                                case BookstoreApp.Data.Enums.OrderStatus.Refunded:
                                    <span class="badge bg-secondary">Refunded</span>
                                    break;
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<div class="mt-4">
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
        <i class="bi bi-arrow-left"></i> Back to Catalog
    </a>
</div>
