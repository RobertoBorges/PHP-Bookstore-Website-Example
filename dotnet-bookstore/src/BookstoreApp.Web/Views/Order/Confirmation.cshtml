@model OrderConfirmationViewModel
@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="text-center py-5">
    <i class="bi bi-check-circle text-success" style="font-size: 5rem;"></i>
    <h1 class="mt-4">Thank You for Your Order!</h1>
    <p class="lead">Your order has been placed successfully.</p>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <strong><i class="bi bi-receipt"></i> Order Details</strong>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <p><strong>Customer:</strong> @Model.Customer.FullName</p>
                        <p><strong>Email:</strong> @Model.Customer.Email</p>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <p><strong>Order Date:</strong> @Model.OrderDate.ToString("MMMM dd, yyyy h:mm tt")</p>
                        <p><strong>Order Count:</strong> @Model.Orders.Count() item(s)</p>
                    </div>
                </div>
            </div>
            <ul class="list-group list-group-flush">
                @foreach (var order in Model.Orders)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>@order.Book?.BookTitle</strong>
                            <br />
                            <small class="text-muted">Qty: @order.Quantity x $@order.UnitPrice.ToString("F2")</small>
                        </div>
                        <span class="fw-bold">$@order.TotalPrice.ToString("F2")</span>
                    </li>
                }
            </ul>
            <div class="card-footer">
                <div class="d-flex justify-content-between fs-5">
                    <strong>Total Paid</strong>
                    <strong class="text-success">$@Model.TotalAmount.ToString("F2")</strong>
                </div>
            </div>
        </div>
        <div class="text-center mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="bi bi-bag"></i> Continue Shopping
            </a>
            <a asp-controller="Order" asp-action="History" class="btn btn-outline-secondary btn-lg ms-2">
                <i class="bi bi-clock-history"></i> View Order History
            </a>
        </div>
    </div>
</div>
